<!-- Add Google Fonts import -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<footer class="bg-gray-900 text-white font-['Poppins']">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Store Info -->
      <div class="space-y-4">
        <h2 class="text-xl font-bold">{{ shop.name }}</h2>
        <p class="text-gray-400">{{ section.settings.store_description }}</p>
        {% if section.settings.show_social_icons %}
          <div class="flex space-x-4">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="text-gray-400 hover:text-white">
                <span class="sr-only">Facebook</span>
