{%- style -%}
  .testimonials-section {
    width: 80vw;
    margin: 0 auto;
  }
  @media (max-width: 768px) {
    .testimonials-section {
      width: 100vw;
    }
  }
{%- endstyle -%}

<div class="testimonials-section">
  <div class="flex flex-col md:flex-row items-center justify-center gap-8 p-6">
    <!-- Image Container -->
    <div class="w-full md:w-1/2">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div
            class="testimonial-image {% unless forloop.first %}hidden{% endunless %}"
            data-testimonial-index="{{ forloop.index0 }}"
          >
            {% if block.settings.testimonial_image != blank %}
              {{
                block.settings.testimonial_image
                | image_url: width: 600
                | image_tag:
                  loading: 'lazy',
                  class: 'w-full h-auto rounded-lg shadow-lg',
                  alt: block.settings.testimonial_name
              }}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'w-full h-auto rounded-lg shadow-lg bg-gray-200' }}
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>

    <!-- Content Container -->
    <div class="w-full md:w-1/2 flex flex-col items-center justify-center text-center">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div
            class="testimonial-content {% unless forloop.first %}hidden{% endunless %}"
            data-testimonial-index="{{ forloop.index0 }}"
          >
            {% if block.settings.testimonial_quote != blank %}
              <blockquote class="text-2xl font-medium mb-4">"{{ block.settings.testimonial_quote }}"</blockquote>
            {% endif %}

            {% if block.settings.testimonial_name != blank %}
              <p class="text-lg font-semibold mb-2">{{ block.settings.testimonial_name }}</p>
            {% endif %}

            {% if block.settings.testimonial_title != blank %}
              <p class="text-gray-600">{{ block.settings.testimonial_title }}</p>
            {% endif %}
          </div>
        {% endfor %}

        <!-- Navigation Buttons -->
        <div class="flex items-center justify-center gap-4 mt-8">
          <button
            class="prev-testimonial p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors"
            aria-label="Previous testimonial"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>

          <button
            class="next-testimonial p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition-colors"
            aria-label="Next testimonial"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  class TestimonialsSlider {
    constructor() {
      this.currentIndex = 0;
      this.testimonials = document.querySelectorAll('.testimonial-content');
      this.images = document.querySelectorAll('.testimonial-image');
      this.totalTestimonials = this.testimonials.length;
      this.autoRotateInterval = null;
      this.rotationTime = {{ section.settings.rotation_time | default: 5000 }};

      this.init();
    }

    init() {
      // Initialize navigation buttons
      const prevButton = document.querySelector('.prev-testimonial');
      const nextButton = document.querySelector('.next-testimonial');

      prevButton?.addEventListener('click', () => this.showPrevious());
      nextButton?.addEventListener('click', () => this.showNext());

      // Start auto-rotation if enabled
      if ({{ section.settings.enable_auto_rotate | json }}) {
        this.startAutoRotation();
      }

      // Pause auto-rotation on hover
      const testimonialsSection = document.querySelector('.testimonials-section');
      testimonialsSection?.addEventListener('mouseenter', () => this.stopAutoRotation());
      testimonialsSection?.addEventListener('mouseleave', () => this.startAutoRotation());
    }

    showTestimonial(index) {
      // Hide all testimonials
      this.testimonials.forEach(testimonial => testimonial.classList.add('hidden'));
      this.images.forEach(image => image.classList.add('hidden'));

      // Show current testimonial
      this.testimonials[index].classList.remove('hidden');
      this.images[index].classList.remove('hidden');
      this.currentIndex = index;
    }

    showNext() {
      const nextIndex = (this.currentIndex + 1) % this.totalTestimonials;
      this.showTestimonial(nextIndex);
    }

    showPrevious() {
      const prevIndex = (this.currentIndex - 1 + this.totalTestimonials) % this.totalTestimonials;
      this.showTestimonial(prevIndex);
    }

    startAutoRotation() {
      this.stopAutoRotation();
      this.autoRotateInterval = setInterval(() => this.showNext(), this.rotationTime);
    }

    stopAutoRotation() {
      if (this.autoRotateInterval) {
        clearInterval(this.autoRotateInterval);
        this.autoRotateInterval = null;
      }
    }
  }

  // Initialize the slider when the DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new TestimonialsSlider();
  });
</script>

