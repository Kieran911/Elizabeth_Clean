  "settings": [
    {
      "type": "checkbox",
      "id": "enable_auto_rotate",
      "label": "Enable Auto Rotation",
      "default": true
    },
    {
      "type": "range",
      "id": "rotation_time",
      "min": 2000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Rotation Time",
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
